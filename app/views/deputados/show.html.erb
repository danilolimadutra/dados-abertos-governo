<%- model_class = Deputado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cod_dep) %>:</strong></dt>
  <dd><%= @deputado.cod_dep %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uri) %>:</strong></dt>
  <dd><%= @deputado.uri %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @deputado.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sigla_partido) %>:</strong></dt>
  <dd><%= @deputado.sigla_partido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uri_partido) %>:</strong></dt>
  <dd><%= @deputado.uri_partido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sigla_uf) %>:</strong></dt>
  <dd><%= @deputado.sigla_uf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:id_legislatura) %>:</strong></dt>
  <dd><%= @deputado.id_legislatura %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url_foto) %>:</strong></dt>
  <dd><%= @deputado.url_foto %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              deputados_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_deputado_path(@deputado), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              deputado_path(@deputado),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
